<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/article"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.test.administrator.formygirl.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        </com.test.administrator.formygirl.TitleLayout>
    <!-- 要修改-->
    <ScrollView
        android:id="@+id/SCROLLER_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fillViewport="true">
    <LinearLayout
        android:id="@+id/visibility_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="复习复习，看书看书"
            android:typeface="monospace"
            android:gravity="center"
            android:padding="0dp"
            android:textSize="24sp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:scaleType="center"
            android:src="@color/accent_material_dark" />
         <!-- 默认显示的是logo图片-->
        <ImageView
            android:id="@+id/news_img"
            android:src="@mipmap/p1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/news_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:padding="15dp"
            android:textSize="18sp"
            android:text="内容敬请期待︿(￣︶￣)︿\n就知道你会点进来(。・＿・。)\n还不去复习看什么看o(一︿一+)o"/>

    </LinearLayout>
</ScrollView>
    </LinearLayout>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        android:src="@color/accent_material_dark"/>
</RelativeLayout>