<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.test.administrator.formygirl">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".FirstActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:windowSoftInputMode="adjustPan"
            android:launchMode="singleTask">

        </activity>
        <activity android:name=".MainActivity"
            android:launchMode="singleTask">
        </activity>

        <activity android:name=".NewsContentActivity"
            android:launchMode="singleTask">
        </activity>
        <activity
            android:name=".NewsActivity"
            android:launchMode="singleTask">
        </activity>
        <activity android:name=".SightsActivity"
            android:launchMode="singleTask">
        </activity>
        <activity android:name=".SightsContentActivity"
            android:launchMode="singleTask">
        </activity>
        <activity android:name=".ContectActivity"></activity>
        <activity android:name=".DuangActivity">
        </activity>
        <activity android:name=".LastActivity"></activity>
    </application>

</manifest>
